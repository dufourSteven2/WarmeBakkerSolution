@model WarmeBakker.Models.ProductDetailDTO

@{
    ViewBag.Title = "Bewerk product";
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Product</h4>

<div class="text-success text-uppercase">
    <h1>
    @ViewBag.UserMessage
   </h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Highlight" /> @Html.DisplayNameFor(model => model.Highlight)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input  asp-for="Picture" class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <seflect asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></seflect>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success"/>
            </div>

        </form>
        <div class="form-group">
            <a class="btn btn-link" asp-action="Index">Back to List</a>

        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}